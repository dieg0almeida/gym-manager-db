<div class="item">
    <div>Avatar</div>
    <div>
        <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://..." 
        required="required" 
        value="{{member.avatar_url}}">
    </div>
</div>
<div class="item">
    <div>Nome</div>
    <div>
        <input 
        type="text" 
        name="name" 
        required="required" 
        value="{{member.name}}">
    </div>
</div>
<div class="item">
    <div>Email</div>
    <div>
        <input 
        type="email" 
        name="email" 
        required="required" 
        value="{{member.email}}">
    </div>
</div>
<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
        type="date" 
        name="birth" 
        required="required"
        value="{{member.birth}}">
    </div>
</div>
<div class="item">
    <div>Sexo</div>
    <div>
        <span>
          <input 
          type="radio" 
          name="gender" 
          value="M" 
          {% if member.gender == 'M'  %}
            checked
          {% endif %}>Masculino
        </span>
        <span>
          <input 
          type="radio" 
          name="gender" 
          value="F" 
          {% if member.gender == 'F'%}
            checked
          {% endif %}>Feminino
          </span>
    </div>
</div>
<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood">
          <option value="A+"{% if member.blood == 'A+'%} selected {% endif %}>A+</option>
          <option value="A-"{% if member.blood == 'A-'%} selected {% endif %}>A-</option>
          <option value="B+"{% if member.blood == 'B+'%} selected {% endif %}>B+</option>
          <option value="B-"{% if member.blood == 'B-'%} selected {% endif %}>B-</option>
          <option value="AB+"{% if member.blood == 'AB+'%} selected {% endif %}>AB+</option>
          <option value="AB-"{% if member.blood == 'AB-'%} selected {% endif %}>AB-</option>
          <option value="O+"{% if member.blood == 'O+'%} selected {% endif %}>O+</option>
          <option value="O-"{% if member.blood == 'O-'%} selected {% endif %}>O-</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input 
        type="number" 
        name="weight" 
        required="required"
        value="{{member.weight}}">
    </div>
</div>
<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input 
        type="number" 
        name="height" 
        required="required"
        value="{{member.height}}">
    </div>
</div>
<button type="submit">Salvar</button>